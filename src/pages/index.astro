---
// src/pages/index.astro

import BaseLayout from "../layouts/BaseLayout.astro";
import Card from "../components/Card.astro";
---

<BaseLayout title="Mohammed Salama Portfolio" description="Meta description. Here goes your page description. Provide a clear and concise summary of the content.">
  <!-- Profile Card -->
  <Card
    name="Mohammed Salama"
    position="Software Engineer"
    aboutMe={`Building cool things and always learning along the way`}
    linkedin="https://www.linkedin.com/in/mohammed-salama-57a110211/"
    github="https://github.com/mhs170"
    cvLink="/files/resume-cv.pdf"
    profileImage="/images/profile.webp"
  />

  <!-- My Projects Section -->
  <section class="projects">
    <ul>
      <li>
        <a href="https://github.com/mhs170/BudgetBuddy" target="_blank">Budget Buddy</a>
        <span class="date">07-2024</span>
      </li>
      <li>
        <a href="https://github.com/mhs170/railway" target="_blank">Railway System</a>
        <span class="date">12-2024</span>
      </li>
      <!--<li>
        <a href="https://github.com/mhs170/" target="_blank">Project 3</a>
        <span class="date">date</span>
      </li>-->
    </ul>
  </section>
</BaseLayout>

<style>
  /* General Layout Styling */
  body {
    font-family: Arial, sans-serif;
    color: white;
    background-color: #121212; /* Dark background for contrast */
  }

  /* Styling for Profile Card Section */
  .card-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 2rem;
  }

  /* Styling for My Projects Section */
  .projects {
    margin-top: 1rem;
    padding: 0 2rem;
  }

  .projects h2 {
    font-size: 1.5rem;
    color: #fff; /* White title */
    margin-bottom: 1rem;
  }

  .projects ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .projects li {
    display: flex;
    justify-content: center;
    align-items: center; /* Align name and date vertically */
    padding: 0.5rem 0;
    font-family: "Roboto Mono", monospace; /* Monospace font for clean aesthetic */
  }

  .projects a {
    color: #3a5161; /* New color for all project links */
    text-decoration: none;
    font-weight: bold;
    font-size: 1rem;
  }

  .projects a:hover {
    color: #3a5161; /* Hover effect for all project links */
  }

  .projects .date {
    color: #9a9a9a; /* Muted gray for the date */
    font-size: 0.875rem; /* Slightly smaller than the project name */
    margin-left: 1rem; 
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .projects li {
      flex-direction: column; /* Stack name and date */
      align-items: flex-start; /* Align content to the left */
      gap: 0.25rem; /* Add some spacing between items */
    }

    .projects .date {
      font-size: 0.75rem; /* Reduce date size on mobile */
    }
  }

  /* Optional hover effect for list items */
  .projects li:hover {
    background: rgba(255, 255, 255, 0.05); /* Subtle highlight */
    border-radius: 8px; /* Optional rounded corners */
  }
</style>
