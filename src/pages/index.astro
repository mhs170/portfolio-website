---
import BaseLayout from "../layouts/BaseLayout.astro";
import Card from "../components/Card.astro";
---

<BaseLayout title="Mohammed Salama Portfolio" description="Meta description. Here goes your page description. Provide a clear and concise summary of the content.">
  <!-- Background Video -->
  <video autoplay loop muted playsinline class="background-video">
    <source src="/images/video4.mp4" type="video/mp4" />
    Your browser does not support the video tag.
  </video>

  <!-- Profile Card -->
  <Card
    name="Mohammed Salama"
    position="Software Engineer"
    aboutMe={`Building cool things and always learning along the way`}
    linkedin="https://www.linkedin.com/in/mohammed-salama-57a110211/"
    github="https://github.com/mhs170"
    cvLink="/files/resume-cv.pdf"
    profileImage="/images/profile.webp"
  />

  <!-- My Projects Section -->
  <section class="projects">
    <ul>
      <li>
        <a href="https://github.com/mhs170/BudgetBuddy" target="_blank">Budget Buddy</a>
        <span class="date">07-2024</span>
      </li>
      <li>
        <a href="https://github.com/mhs170/railway" target="_blank">Railway System</a>
        <span class="date">12-2024</span>
      </li>
      <li>
        <a href="https://github.com/mhs170/portfolio-website" target="_blank">Personal Website</a>
        <span class="date">12-2024</span>
      </li>
    </ul>
  </section>
</BaseLayout>

<style>
  /* General Layout Styling */
  body {
    font-family: Arial, sans-serif;
    color: white;
    margin: 0;
    padding: 0;
    overflow: hidden; /* Prevent scrollbars due to video size */
  }

  /* Background Video Styling */
  .background-video {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover; /* Ensures the video covers the entire screen */
    z-index: -1; /* Places video behind other content */
  }

  /* Styling for Profile Card Section */
  .card-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 2rem;
  }

  /* Styling for My Projects Section */
  .projects {
    margin-top: 1rem;
    padding: 0 2rem;
  }

  .projects h2 {
    font-size: 3rem;
    color: #fff;
    margin-bottom: 1rem;
  }

  .projects ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .projects li {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 33rem;
    font-family: "Roboto Mono", monospace;
  }

  .projects a {
    color: #3a5161;
    text-decoration: none;
    font-weight: bold;
    font-size: 1.2rem;
  }

  .projects a:hover {
    color: #3a5161;
  }

  .projects .date {
    color: #9a9a9a;
    font-size: 1rem;
    margin-left: 1rem; 
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .projects li {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }

    .projects .date {
      font-size: 0.75rem;
    }
  }

  .projects li:hover {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 8px;
  }
</style>